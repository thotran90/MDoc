@model MDoc.Models.CommentModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <label>Add new comment</label>
        @Html.TextAreaFor(m => m.Content, 3, 1, new { @class = "form-control",@placeholder="Input your comment and click Send.." })
    </div>
</div>
<div class="row row-margintop">
    <div class="col-md-12 col-xs-12 col-sm-12 text-right">
        <a class="btn btn-primary" onclick="appDocument.addComment()"><i class="fa fa-send"></i> Send</a>
    </div>
</div>
