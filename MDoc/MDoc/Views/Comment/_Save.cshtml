@model MDoc.Services.Contract.DataContracts.DocumentCommentModel
@using (Ajax.BeginForm("Save", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "list-of-comments",
    InsertionMode = InsertionMode.InsertAfter
}))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m=>m.DocumentId)
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <label>Add new comment</label>
            @Html.ValidationMessageFor(m => m.Content)
            @Html.TextAreaFor(m => m.Content, 4, 1, new {@class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12 col-sm-12 text-right">
            <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i> Send</button>
        </div>
    </div>
}
