@model MDoc.Services.Contract.DataContracts.ChecklistModel
@{
    ViewBag.Title = Model.IsUpdate ? "Edit checklist item" : "Add new checklist item";
}
@using (Html.BeginForm("SaveChecklistItem", "Setting", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m=>m.Id)
    <div class="row">
        <div class="col-md-5 col-sm-12 col-xs-12">
            @Html.LabelFor(m => m.Label)
            @Html.ValidationMessageFor(m => m.Label)
            @Html.TextBoxFor(m => m.Label, new {@class = "form-control"})
        </div>
    </div>
    <div class="row row-margintop">
        <div class="col-md-5 col-sm-12 col-xs-12">
            @Html.LabelFor(m => m.Description)
            @Html.ValidationMessageFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, 3, 1, new {@class = "form-control"})
        </div>
    </div>
    <div class="row row-margintop">
        <div class="col-md-12 col-xs-12 col-sm-12">
            <a class="btn btn-default" href="@Url.Action("Index", "Setting")"><i class="fa fa-backward"></i> Back </a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
        </div>
    </div>
}